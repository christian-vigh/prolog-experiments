

:- op(900, xfx, ..).
:- op(700, xfx, covers).
:- op(800,  fx, /<).
:- op(800,  fx, />).
:- op(800,  xf, </).
:- op(800,  xf, >/).




valid_interval(-inf,    _, _).
valid_interval(_   , +inf, _).
valid_interval(A   ,    B, Op) :-
	X =.. [Op, A, B],
	call(X).	 

X covers /<A..B>/  :-
	valid_interval(A, B),
	X = [ [A, B, >=, <=] ].

