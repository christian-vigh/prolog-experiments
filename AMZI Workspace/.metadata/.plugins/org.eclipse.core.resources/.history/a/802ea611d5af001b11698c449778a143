% logical predicates


% A boolean is...
boolean(0).
boolean(1).
boolean(X) :-
	throw( domainerror(boolean, X) ).
	

% Just to test which are authorized combinations of operators
junk([ 
 	./\.		,
 	/\		,
 	.\/.		,
 	\/		,
 	.~.		,
 	~		,
 	.\~/.		,
 	\~/		,
	.->.		,
 	*=
 	]).

% NOT operator 
:- op(500, fx, ~).
 
~ 0.
~ 1 :- fail, !.
~ X :- throw( domainerror(~, X) ).


% OR operator
:- op(1200, xfx, \/).

0 \/ 0 :- fail.
0 \/ 1.
1 \/ 0.
1 \/ 1.
X \/ Y :- throw( domainerror(\/, [X, Y]) ).


% AND operator
:- op(1200, xfx, /\).

0 /\ 0 :- fail.
0 /\ 1 :- fail.
1 /\ 0 :- fail.
1 /\ 1.
X /\ Y :- throw( domainerror(/\, [X, Y]) ).


