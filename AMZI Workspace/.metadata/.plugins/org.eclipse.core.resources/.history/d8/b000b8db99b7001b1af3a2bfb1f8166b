% Meta predicates
concept(X).

kr$belongs(X, Y) :-
	belongs(X, Y).
kr$belongs(X, Y) :-
	kr$belongs(X, Temp),
	kr$belongs(Temp, Y).


% Grammar
sentence( [exit] )  		-->  kw_exit, kw_optional_dot.
sentence( [help] ) 		-->  kw_help, kw_optional_dot.

kw_exit  	-->  ( [exit] ; [bye] ; [quit] ; [q] ; [x] ).
kw_help  	-->  ( [help] ; [h] ; ['?'] ).
kw_optional_dot -->  ( ['.'] ; ['. '] ; [] ).


% Command predicates
exit.

help :-
	write('Help for Expert System :'), nl,
	write('----------------------'), nl,
	write('     help             Shows command help.'), nl,
	write('     quit             Leaves the expert system.'), nl,
	nl.

% Command loop	
main :-
   	write('Expert System Version 0.1'), nl,
   	write('-------------------------'), nl, nl,
   	read_database,
	repeat,
   	do_command.

do_command :-
   	write('Command> '),
   	read_string(STRING),
   	string_tokens(STRING, TOKENS),
   	sentence(CLIST, TOKENS, []),
   	COMMAND =.. CLIST,
   	do_call(COMMAND),
   	!,
   	COMMAND == exit.

 
 do_call(Command) :-
 	call(Command).
 do_call(_) :-
 	write('incorrect command. Type ''Help'' for a list of available commands.'),
 	nl.
 	
 	
 read_database :-
 	read_filename(Name),
 	open( Name, read, ID, [ alias(database) ] ),
 	repeat,
 		read( database, Fact ),
 		assert( Fact ),
 	Fact == end_of_file,
 	close( database ).
 	
 	
 read_filename('Database.pro').